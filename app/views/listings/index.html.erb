<center>
<h1>Home listings</h1>

<table>
  <tr>
    <th><%= sortable "priority", "Priority" %></th>
    <th><%= sortable "zip", "Zipcode" %></th>
    <th>Address</th>
    <th><%= sortable "city", "City" %></th>
<!--
    <th>State</th>
-->
    <th><%= sortable "price", "Price" %></th>
    <th><%= sortable "zprice", "Z-Price" %></th>
<!--
    <th>Beds</th>
    <th>Baths</th>
-->
    <th><%= sortable "lot_size", "Lot" %></th>
    <th><%= sortable "home_size", "Home" %></th>
    <th><%= sortable "sold_price", "Sold price" %></th>
    <th><%= sortable "date_sold", "Date sold" %></th>
<!--
    <th>Sale type</th>
    <th>Listing</th>
    <th>Times listed</th>
-->
    <th><%= sortable "market_time", "Listed Days" %></th>
<!--
    <th>Contact</th>

    <th>Contacted</th>
-->
    <th><%= sortable "viewed", "Viewed" %></th>
<!--
    <th>Notes</th>
-->
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @listings.each do |listing| %>
  <tr>
    <td><%= listing.priority %></td>
    <td><%= listing.zip %></td>
    <td><%= listing.address %></td>
    <td><%= listing.city %></td>
<!--
    <td>< % = listing.state % ></td>
-->
    <td>$&nbsp;<%= number_with_delimiter(listing.price, :delimiter => ',') %></td>
    <td>$&nbsp;<%= number_with_delimiter(listing.zprice, :delimiter => ',') %></td>
<!--
    <td>< % = listing.beds % ></td>
    <td>< % = listing.baths % ></td>
-->
    <td align="center"><%=  number_with_delimiter(listing.lot_size, :delimiter => ',') %></td>
    <td align="center"><%=  number_with_delimiter(listing.home_size, :delimiter => ',') %></td>
    <td align="center">$ <%= number_with_delimiter(listing.sold_price, :delimiter => ',') %></td>
    <td><%= listing.date_sold %></td>
<!--
    <td>< % = listing.sale_type % ></td>
    <td>< % = listing.listing % ></td>
    <td>< % = listing.times_listed % ></td>
    <td align="center">< % = listing.market_time % ></td>
-->
    <% days = ((Date.today - listing.created_at.to_date) + listing.market_time) %>
    <td align="center"><%= days.to_i %></td>
<!--
    <td>< % = listing.contact % ></td>

    <td><%= listing.contacted %></td>

<td>< % = check_box_tag :contacted , 1 , listing.contacted ? false : true % ></td>
    <td>< % = listing.viewed % ></td>
-->

    <td><%= listing.viewed ? 'yes' : 'no' %>
<!--
    <td>< % = listing.notes % ></td>
-->
    <td><%= link_to 'Show', listing %></td>
    <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
    <td><%= link_to 'Destroy', listing, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />
<strong><%= paginate @listings %><br />
<%= link_to 'New Listing', new_listing_path %>
</strong>
</center>
